{
    "name": "khaledhajsalem/zatca-php",
    "description": "A comprehensive PHP package for ZATCA (Saudi Arabia e-invoicing) invoice processing, signing, and submission",
    "type": "library",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Khaled Haj Salem",
            "email": "khaledhajsalem@gmail.com",
            "homepage": "https://github.com/khaledhajsalem"
        }
    ],
    "keywords": [
        "zatca",
        "e-invoicing",
        "saudi-arabia",
        "invoice",
        "tax",
        "compliance",
        "digital-signature",
        "qr-code"
    ],
    "homepage": "https://github.com/khaledhajsalem/zatca-php",
    "require": {
        "php": "^8.0",
        "phpseclib/phpseclib": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "chillerlan/php-qrcode": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "KhaledHajSalem\\Zatca\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KhaledHajSalem\\Zatca\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 